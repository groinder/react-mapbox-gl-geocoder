{
    "parser": "babel-eslint",
    "extends": [
        "standard",
        "standard-react"
    ],
    "env": {
        "es6": true
    },
    "plugins": [
        "react"
    ],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        // don't force es6 functions to include space before paren
        "space-before-function-paren": 0,
        // allow specifying true explicitly for boolean props
        "react/jsx-boolean-value": 0,
        "indent": [
            "error",
            4
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "semi": ["error", "always"]
    }
}
